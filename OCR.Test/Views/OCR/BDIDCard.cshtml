@model UploadViewModel
@{
    ViewData["Title"] = "BDIDCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewData["result"] != null)
{
    var result = ViewData["result"] as Dictionary<string, string>;
    foreach (var item in result)
    {
        <div class="form-group">
            <h5>@item.Key:@item.Value</h5>
        </div>
    }
}
else if (ViewData["error"] != null)
{
    <h2>@ViewData["error"]</h2>
}
<form asp-controller="OCR" asp-action="BDIDCard" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="FrontFile"></label>
        <input type="file" asp-for="FrontFile" />
    </div>
    <div class="form-group">
        <label asp-for="BackFile"></label>
        <input type="file" asp-for="BackFile" />
    </div>
    <button type="submit" class="btn btn-default">提交</button>
</form>
